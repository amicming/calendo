<div class="subnav">
	<ul class="nav nav-pills">
		<li><%= link_to raw("<span>Create New Event</span>"), new_event_path %></li>
		<li><%= link_to raw("<span>View Calendar</span>"), calhome_path %></li>
	</ul>
</div>
<h3>Listing events</h3>

<table class="table table-striped table-bordered table-condensed"> 
	<thead>
		<tr>
			<th>Title</th>
			<th>Starts at</th>
			<th>Ends at</th>
			<th>All day</th>
			<th>Description</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	<thead>
	<tbody>
		<% @events.each do |event| %>
		  <tr>
			<td><%= event.title %></td>
			<td><%= event.starts_at %></td>
			<td><%= event.ends_at %></td>
			<td><%= event.all_day %></td>
			<td><%= event.description %></td>
			<td><%= link_to 'View', event %></td>
			<td><%= link_to 'Edit', edit_event_path(event) %></td>
			<td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	</tbody>
</table>
<br />