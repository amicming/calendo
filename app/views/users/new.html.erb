<h3>Sign Up</h3>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', object: @user %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation %><br />
	
	<%= f.submit "Create my account", class: "btn btn-small btn-primary" %>
<% end %><br />
Already a member? <%= link_to "Login Here", signin_path, class: "btn btn-mini btn-primary" %>